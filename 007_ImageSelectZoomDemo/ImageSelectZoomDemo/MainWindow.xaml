<Window x:Class="ImageSelectZoomDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSelectZoomDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Columns="2">
        <Image x:Name="imgSrc" Source="1.png" Stretch="Uniform" MouseDown="Image_MouseDown" MouseUp="Image_MouseUp"/>
        <Image x:Name="imgDst" Stretch="Uniform"/>
    </UniformGrid>
</Window>
