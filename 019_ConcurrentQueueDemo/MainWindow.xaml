<Window x:Class="ConcurrentQueueDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConcurrentQueueDemo"
        mc:Ignorable="d" Title="MainWindow"
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <UniformGrid Columns="2">
            <Button Content="入队测试" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Padding="10"
                    FontSize="24" Click="Button_Click" />
            <Button Content="出队测试" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Padding="10"
                    FontSize="24" Click="Button1_Click" />
        </UniformGrid>

        <ListBox x:Name="lb" Grid.Row="1"
                 Height="300" />
    </Grid>
</Window>