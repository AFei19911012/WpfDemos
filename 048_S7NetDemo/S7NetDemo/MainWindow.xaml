<Window x:Class="S7NetDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S7NetDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="连接Plc" Padding="5" Margin="5" Click="OnOpenPlc"/>
            <Button Content="读写数据" Padding="5" Margin="5" Click="OnReadWrite"/>
            <Button Content="断开Plc" Padding="5" Margin="5" Click="OnClosePlc"/>
        </StackPanel>
    </Grid>
</Window>
