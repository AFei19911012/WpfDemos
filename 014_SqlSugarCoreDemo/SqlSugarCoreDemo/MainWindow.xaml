<Window x:Class="SqlSugarCoreDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlSugarCoreDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="增加" FontSize="24" Margin="5" Click="ButtonAdd_Click"/>
            <Button Content="删除" FontSize="24" Margin="5" Click="ButtonDel_Click"/>
            <Button Content="修改" FontSize="24" Margin="5" Click="ButtonUpdate_Click"/>
            <Button Content="查询" FontSize="24" Margin="5" Click="ButtonSearch_Click"/>
        </WrapPanel>
        <ListBox x:Name="lb" Grid.Row="1"/>
    </Grid>
</Window>