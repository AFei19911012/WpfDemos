<UserControl x:Class="WpfPlot3DDemo.Plot3D.Plot3DControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfPlot3DDemo.Plot3D"
             mc:Ignorable="d" d:DesignHeight="450"
             d:DesignWidth="800" Name="plot3d"
             Background="White">
    <Image Name="Part_Image"
       Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:Plot3DControl}, Path=Source}"
       Stretch="Uniform" />
</UserControl>