<Window x:Class="AdornerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdornerDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <local:DragCanvas x:Name="MyDragCanvas"/>
        <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <RepeatButton Content="创建矩形" FontSize="16" Padding="2" Click="Button1_Click"/>
            <Button Content="对齐" FontSize="16" Padding="2" Click="Button2_Click"/>
            <Button Content="清空" FontSize="16" Padding="2" Click="Button3_Click"/>
            <Button Content="锁定/解锁" FontSize="16" Padding="2" Click="Button4_Click"/>
            <RepeatButton Content="插入矩形" FontSize="16" Padding="2" Click="Button5_Click"/>
            <Button Content="统一尺寸" FontSize="16" Padding="2" Click="Button6_Click"/>
            <Button Content="适应尺寸" FontSize="16" Padding="2" Click="Button7_Click"/>
            <Button Content="批量创建" FontSize="16" Padding="2" Click="Button8_Click"/>
        </WrapPanel>
    </Grid>
</Window>
